@model Book

<form method="post" asp-action="DeletePOST">
	<input asp-for="book_id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-danger">Delete Book</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="book_name"></label>
			<input asp-for="book_name" class="form-control" disabled/>
			<span asp-validation-for="book_name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}